{
  "name": "tubi-crawler",
  "version": "1.0.0",
  "description": "An Electron + Node.js desktop app that crawls Tubi TV series pages to extract episode data and export it as a text file.",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "rimraf dist && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^11.0.2",
    "puppeteer": "^24.29.1"
  },
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.1.0"
  },
  "build": {
    "appId": "com.example.tubicrawler",
    "productName": "Tubi Crawler",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}_portable.${ext}"
    }
  }
}
